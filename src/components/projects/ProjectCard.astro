<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: rgb(44, 57, 102, 1);
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.25);
    /* width: 50%; */
  }
  .img-placeholder {
    /* width: 630px; */
    width: 30rem;
    height: 20rem;
    /* height: 450px; */
    background-color: var(--navbar);
    border-radius: 10px;
  }
  img {
    width: 30rem;
    height: 20rem;
    border-radius: 10px;
  }
  h1 {
    font-size: 48px;
    font-weight: 600;
  }
  h3 {
    font-size: 22px;
    font-weight: 500;
    color: var(--accent);
    margin-top: 32px;
  }
  p {
    font-size: 18px;
    font-weight: 400;
    color: var(--secondary-text);
    margin-top: 15px;
  }
  .action-buttons {
    display: flex;
    justify-content: end;
    gap: 0.75rem;
    margin-top: 2rem;
  }
  .action-buttons button {
    min-width: 10rem;
    height: 100%;
  }
  .live-demo {
    background-color: transparent;
    border: 2px solid var(--accent);
    color: var(--accent);
  }
</style>
