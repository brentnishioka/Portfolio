---
const { link, linkTitle } = Astro.props;
---

<div class="nav-button">
  <a href={link}>
    <p>
      {linkTitle}
    </p>
  </a>
  <!-- <div class="nav-underline"></div> -->
</div>

<style>
  .nav-button {
    display: flex;
    min-width: 10rem;
    height: 100%;
    align-items: center;
    border-radius: 5px;
  }
  .nav-button:hover {
    /* background-color: var(--navbar-button); */
    cursor: pointer;
  }
  a {
    display: flex;
    text-decoration: none;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  p {
    font-size: 1.6rem;
    color: var(--primary-text);
    position: relative;
  }
  p::after {
    display: block;
    position: absolute;
    content: "";
    width: 100%;
    height: 3px;
    background-color: var(--accent);
    transition: transform .8s cubic-bezier(.16,1.08,.38,.98);
    border-radius: 5px;
    transform: scale(0);
  }
  p:hover::after {
    transform: scale(1);
  }
</style>
