---
import NavbarButton from "../navbar/NavbarButton.astro";
---

<nav>
  <div class="icon">
    <a href="#">
      <img src="../code.svg" alt="Logo" />
    </a>
  </div>
  <div class="nav-links">
    <NavbarButton link="#about" linkTitle="about" />
    <!-- <NavbarButton link="#skills" linkTitle="skills" /> -->
    <NavbarButton link="#projects" linkTitle="projects" />
    <NavbarButton link="#contact" linkTitle="contact" />
  </div>
</nav>

<style>
  nav {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
    width: 100%;
    height: 75px;
    background-color: var(--navbar);
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.25);
  }
  .icon {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    gap: 0.75rem;
    margin-left: 2rem;
  }
  .nav-links {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: end;
    /* margin-right: 20px; */
  }
  img {
    width: 3.5rem;
  }
  span {
    font-size: 1.6rem;
  }
</style>
