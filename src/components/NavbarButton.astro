---
const { link, linkTitle } = Astro.props;
---

<div class="nav-button">
  <a href={link}>{linkTitle}</a>
</div>

<style>
  .nav-button {
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    border-radius: 5px;
  }
  .nav-button:hover {
    background-color: var(--navbar-button);
    cursor: pointer;
  }
  a {
    display: flex;
    text-decoration: none;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    font-size: 1.6rem;
    color: var(--primary-text);
  }
</style>
