---
const { fieldName, fieldType } = Astro.props;
---

<div>
  <label for="contact-input">{fieldName}</label>
  <input type={fieldType} name="contact-input" />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    gap: 5px;
    align-items: start;
    padding: 10px 20px;
    min-height: 56px;
    border-radius: 10px;
    background-color: var(--panel-color);
    width: 100%;
  }
  label {
    color: var(--secondary-text);
    width: 100%;
  }
  input {
    width: 100%;
    border: none;
    outline: none;
    background-color: transparent;
  }
</style>
