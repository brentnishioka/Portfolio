---
const { name, image } = Astro.props;
---

<div class="skill-card" id={name}>
  <div class="content">
    <img src={image} />
    <h3>{name}</h3>
  </div>
</div>

<style>
  .skill-card {
    width: 150px;
    height: 150px;
    border-radius: 10px;
    background-color: var(--panel);
  }
  .content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }
  img {
    width: 50px;
    height: 50px;
  }
  #golang img {
    width: 70px;
  }
  h3 {
    font-size: 1.25rem;
    color: var(--secondary-text);
  }
</style>
